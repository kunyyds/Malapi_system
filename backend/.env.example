# 应用配置
DEBUG=true
APP_NAME=MalAPI System
VERSION=1.0.0

# 数据库配置
DATABASE_URL=sqlite:///./malapi.db
# 生产环境使用PostgreSQL:
# DATABASE_URL=postgresql://malapi_user:malapi_password@localhost:5432/malapi
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=malapi
DATABASE_USER=malapi_user
DATABASE_PASSWORD=malapi_password

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# 文件路径配置
FILES_BASE_PATH=/home/mine/workspace/MalAPI_system/files

# LLM配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# 缓存配置
CACHE_TTL_SECONDS=3600
LLM_CACHE_TTL_HOURS=24

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=malapi.log

# API配置
API_PREFIX=/api/v1
MAX_REQUEST_SIZE=10485760

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 成本控制配置
DAILY_LLM_BUDGET=100.0
COST_PER_TOKEN_GPT4=0.00003
COST_PER_TOKEN_GPT35=0.000002